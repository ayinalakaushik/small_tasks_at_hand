<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/post_textView15"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_title"
        android:layout_below="@+id/post_textView15"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/post_textView16"
        android:layout_below="@+id/post_title"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_description"
        android:layout_alignBottom="@+id/post_textView16"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/post_editText8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estimated Time(hr):"
        android:id="@+id/post_textView17"
        android:layout_below="@+id/post_description"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/post_editText8"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/post_textView17"
        android:layout_toEndOf="@+id/post_textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estimated Price($):"
        android:id="@+id/post_textView18"
        android:layout_below="@+id/post_editText8"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/post_editText9"
        android:textSize="30sp"
        android:layout_alignTop="@+id/post_textView18"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/post_editText8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post task"
        android:id="@+id/post_button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/post_editText9"
        android:layout_alignParentStart="true"
        android:checkedButton="@+id/post_radioButton"
        android:layout_above="@+id/post_button2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="use my location"
            android:id="@+id/post_radioButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select location from map"
            android:id="@+id/post_radioButton2"
            android:checked="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="post_Small Text"
            android:visibility="invisible"
            android:id="@+id/post_textView19" />
    </RadioGroup>

</RelativeLayout>
